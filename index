<body>

<div class="overlay">
    <div id="message">Loading message...</div>
</div>

<script>
/* LOAD FULL TEXT FROM GITHUB (NO CUTTING) */
fetch("https://raw.githubusercontent.com/afmanali14/birthday-letter/refs/heads/main/letter.text")
.then(res => res.text())
.then(text => {
    document.getElementById("message").innerText = text;
})
.catch(() => {
    document.getElementById("message").innerText = "Message failed to load.";
});
</script>

