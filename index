}

/* DARK OVERLAY FOR READABILITY */
.overlay{
    min-height:100vh;
    background:rgba(0,0,0,0.35);
    padding:40px 20px 80px;
    box-sizing:border-box;
}

/* TEXT AREA */
#message{
    max-width:900px;
    margin:0 auto;
    color:white;
    font-size:26px;
    font-weight:600;   /* ðŸ”¥ slightly bold */
